<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="6dp"
    card_view:cardUseCompatPadding="true">

    <com.example.quickrecipe.SquareImageView
        android:id="@+id/recipeImgListItem"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="left|center"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/screen_background_dark" />


    <TextView
        android:id="@+id/prepTimeListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:paddingTop="8dp"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cookTimeListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:paddingTop="8dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/prepTimeListItem"
        app:layout_constraintTop_toBottomOf="@+id/prepTimeListItem" />


    <ImageView
        android:id="@+id/editRecipeImageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:srcCompat="@drawable/square_edit_outline_black" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/recipeNameListItem"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="28dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="12dp"
        android:paddingEnd="16dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="20sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/prepTimeListItem"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/recipeFavorite"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="48dp"
        app:srcCompat="@drawable/heart_outline" />
</android.support.v7.widget.CardView>