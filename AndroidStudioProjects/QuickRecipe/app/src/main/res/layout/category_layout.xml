<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/gridItemImage"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:scaleType="center"
        android:background="#80E0E0E0"/>

    <ImageView
        android:id="@+id/gridItemCheckmark"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/gridItemName"
        android:layout_alignEnd="@+id/gridItemImage"
        android:background="@drawable/ic_tick"
        android:backgroundTint="@android:color/holo_green_light"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/gridItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>